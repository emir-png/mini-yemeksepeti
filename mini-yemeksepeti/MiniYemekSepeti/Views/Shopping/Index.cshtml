@model ShoppingSearchModel
@{
}



<h2 class="pb-4 text-center">Yemekler</h2>

<form class="row g-3 mb-3">
    <div class="col-lg-2 col-md-4">
       <select class="form-select" name="restaurant" asp-for="Restaurant" onchange="this.form.submit()">
            <option value="">All Restaurants</option>
            <option value="Burger King">Burger King</option>
            <option value="Mc Donalds">Mc Donalds</option>
            <option value="TatBak">TatBak</option>
            <option value="Lüks Pastanesi">Lüks Pastanesi</option>
            </select>
        </div>
    <div class="col-lg-2 col-md-4">
        <select class="form-select" name="category" asp-for="Category" onchange="this.forms.submit()">
            <option value="">All Categories</option>
            <option value='Burger'>Burgerler</option>
            <option value='Kebab'>Kebaplar</option>
            <option value='Lahmacun'>Lahmacunlar</option>
            <option value='Doner'>Dönerler</option>
            <option value='Fastfood'>Fastfoodlar</option>
            <option value='Ev Yemekleri'>Ev yemekleri</option>
            <option value='Pizza'>Pizzalar</option>
            <option value='Kofte'>Köfteler</option>
            <option value='Tatlı'>Tatlılar</option>
            <option value='cıg_kofte'>ciğ köfte</option>
        </select>
    </div>
    <div class="col-lg-2 col-md-4">
        <select class="form-select" name="sort" asp-for="Sort" onchange="this.form.submit()">
            <option value="newest">Order by Newest</option>
            <option value="price_asc">Price: Low to High</option>
            <option value="price_desc">Price: High to Low</option>
        </select>
    </div>
    <div class="col-lg-6 col-md-12 d-flex">
        <input class="form-control me-2" name="search" asp_for="Search" placeholder="Search by Name">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </div>
</form>

<div class="row mb-5 g-3">
    @foreach (var food in ViewBag.Food)
    {
        <div class="col-lg-3 col-md-6">
            <div class="rounded border shadow p-3 text-center h-100">
                <img src="/products/@food.ImageFileName" class="img-fluid" alt="..."
                     style="height:180px; object-fit:contain" />
                <hr />
                <h5 class="py-2">@food.Name</h5>
                <p>
                    Restaurant: @food.Restaurant, Category: @food.Category
                </p>
                <h4 class="mb-3">@(food.Price)tl</h4>
                <a class="btn btn-primary btn-sm mb-2" asp-controller="Shopping"
                   asp-action="Details" asp-route-id="@food.Id" role="button">Details</a>
                <button type="button" class="btn btn-warning btn-sm mb-2" onclick="addToCart(this, @food.Id)">
                    Add to Cart <i class="bi bi-cart4"></i>
                </button>
            </div>

        </div>
    }

</div>



<nav>
    <ul class="pagination">
        @for( int i=1; i <= ViewBag.TotalPages; i++)
        {
            string active = "";
            if (i == ViewBag.PageIndex) active= "active";
            <li class="page-item @active"><a class="page-link" asp-route-pageIndex="@i"
            asp-route-search="@Model.Search" asp-route-brand="@Model.Restaurant"
            asp-route-category="@Model.Category" asp-route-sort="@Model.Sort">@i</a></li>
        }
    </ul>
</nav>